{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "preserveConstEnums": true,
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "baseUrl": "./src",
      "paths": {
        "@feature/*": ["feature/*"],
        "@pages/*": ["pages/*"],
        "@common/*": ["common/*"]
      },
      "lib": ["dom", "es2020"]
    },
    "include": ["src/**/*"],
    "exclude": ["**/*.spec.ts", "**/*.css"]
  }
  